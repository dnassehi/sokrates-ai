// This is your Prisma schema file for local development
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5432/app" // localhost for Prisma Studio
}

model Doctor {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  clinicCode String   @unique
  createdAt  DateTime @default(now())

  ratings    Rating[]
}

model Session {
  id             Int      @id @default(autoincrement())
  clinicCode     String
  status         String   @default("active") // active, completed
  openaiThreadId String?  // OpenAI thread ID for this session
  createdAt      DateTime @default(now())
  completedAt    DateTime?

  messages    Message[]
  anamnesis   Anamnesis?
  rating      Rating?
}

model Message {
  id        Int      @id @default(autoincrement())
  sessionId Int
  role      String   // user, assistant
  content   String
  createdAt DateTime @default(now())

  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model Anamnesis {
  id                 Int      @id @default(autoincrement())
  sessionId          Int      @unique
  hovedplage         String
  tidligereSykdommer String
  medisinering       String
  allergier          String
  familiehistorie    String
  sosialLivsstil     String
  ros                String
  pasientMaal        String
  friOppsummering    String
  createdAt          DateTime @default(now())

  session            Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model Rating {
  id        Int      @id @default(autoincrement())
  sessionId Int      @unique
  doctorId  Int?
  score     Int      // 1-5 rating
  comment   String?
  createdAt DateTime @default(now())

  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  doctor    Doctor?  @relation(fields: [doctorId], references: [id])
}
